root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2